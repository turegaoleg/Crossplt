import 'package:flutter/material.dart';

void main() {
  runApp(const MyApp());
}

class MyApp extends StatelessWidget {
  const MyApp({Key? key}) : super(key: key);

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      debugShowCheckedModeBanner: false,
      home: Scaffold(
        backgroundColor: Colors.white,
        body: Container(
          color: Colors.white,
          padding: EdgeInsets.all(0),
          child: Column(
            crossAxisAlignment: CrossAxisAlignment.start,
            children: [
              // Верхній відступ a=200
              Container(height: 200, color: Colors.white),
              
              // Row з двома текстовими блоками, висота b=250
              SizedBox(
                height: 250,
                child: Row(
                  crossAxisAlignment: CrossAxisAlignment.start,
                  children: [
                    // Лівий відступ n=3
                    SizedBox(width: 3),
                    
                    // Перший текстовий блок (жовтий), flex r=7
                    Expanded(
                      flex: 7,
                      child: Container(
                        decoration: BoxDecoration(
                          color: Colors.yellow,
                          border: Border.all(color: Colors.black, width: 2),
                        ),
                        padding: EdgeInsets.all(8),
                        alignment: Alignment.topLeft,
                        child: Text(
                          'Ще не вмерла Україна, і слава, і воля, ще нам, браття молодії',
                          textDirection: TextDirection.ltr,
                          style: TextStyle(
                            fontSize: 12,
                            color: Colors.black,
                          ),
                        ),
                      ),
                    ),
                    
                    // Проміжок між блоками p=5
                    SizedBox(width: 5),
                    
                    // Другий текстовий блок (синій), flex r=7
                    Expanded(
                      flex: 7,
                      child: Container(
                        decoration: BoxDecoration(
                          color: Colors.blue[300],
                          border: Border.all(color: Colors.black, width: 2),
                        ),
                        padding: EdgeInsets.all(8),
                        alignment: Alignment.topLeft,
                        child: Text(
                          'Згинуть наші вороженьки, як роса на сонці, запануєм і ми, браття, у своїй сторонці.',
                          textDirection: TextDirection.ltr,
                          style: TextStyle(
                            fontSize: 12,
                            color: Colors.black,
                          ),
                        ),
                      ),
                    ),
                    
                    // Правий відступ s=5
                    SizedBox(width: 5),
                  ],
                ),
              ),
              
              // Відступ між рядами c=150
              Container(height: 150, color: Colors.white),
              
              // Третій текстовий блок, висота d=150, ширина m=200
              Padding(
                padding: EdgeInsets.only(left: 5, right: 5),
                child: Row(
                  crossAxisAlignment: CrossAxisAlignment.start,
                  children: [
                    // Третій блок (білий з чорною рамкою)
                    Container(
                      width: 200, // m=200
                      height: 150, // d=150
                      decoration: BoxDecoration(
                        color: Colors.white,
                        border: Border.all(color: Colors.black, width: 2),
                      ),
                      padding: EdgeInsets.all(8),
                      alignment: Alignment.topLeft,
                      child: Text(
                        'І покажем, що ми, браття, козацького роду.',
                        textDirection: TextDirection.ltr,
                        style: TextStyle(
                          fontSize: 12,
                          color: Colors.black,
                        ),
                      ),
                    ),
                  ],
                ),
              ),
              
              // Залишковий простір
              Expanded(child: Container()),
            ],
          ),
        ),
      ),
    );
  }
}
