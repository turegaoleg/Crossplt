import 'package:flutter/material.dart';

void main() {
  runApp(const MyApp());
}

class MyApp extends StatelessWidget {
  const MyApp({Key? key}) : super(key: key);

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      debugShowCheckedModeBanner: false,
      home: Scaffold(
        backgroundColor: Colors.white,
        body: Center(
          child: Stack(
            children: [
              // Жовтий шар (найбільший, ззаду)
              Positioned(
                top: 24, // a=24px
                left: 0,
                right: 0,
                bottom: 0,
                child: Container(
                  color: Colors.yellow,
                ),
              ),
              
              // Червоний шар (середній)
              Positioned(
                top: 24 + 34, // a + b = 58px
                left: 24, // a=24px
                right: 0,
                bottom: 0,
                child: Container(
                  color: Colors.red,
                  alignment: Alignment.topRight,
                  padding: EdgeInsets.only(top: 10, right: 80),
                  child: Text(
                    'Hello',
                    style: TextStyle(
                      color: Colors.white,
                      fontSize: 24,
                      fontWeight: FontWeight.bold,
                    ),
                  ),
                ),
              ),
              
              // Синій шар (найменший, спереду)
              Positioned(
                top: 24 + 34 + 64, // a + b + c = 122px
                left: 24 + 34, // a + b = 58px
                right: 0,
                bottom: 0,
                child: Container(
                  color: Colors.cyan,
                  alignment: Alignment.bottomRight,
                  padding: EdgeInsets.only(bottom: 20, right: 20),
                  child: Text(
                    'Flutter',
                    style: TextStyle(
                      color: Colors.white,
                      fontSize: 24,
                      fontWeight: FontWeight.bold,
                    ),
                  ),
                ),
              ),
            ],
          ),
        ),
      ),
    );
  }
}
